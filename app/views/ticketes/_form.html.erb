<%= simple_form_for([project, tickete]) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :tag_names, label: "Tags" %>

  <div id="attachments">
    <h3>Attachments</h3>
    <%= render partial: "attachments/form", locals: { f: f, index: 0 } %>
  </div>

  <p>
    <%= link_to "Add another file", new_attachment_path, remote: true,
      id: "add_file", data: { params: { index: tickete.attachments.size }.to_param } %>
  </p>

  <%= f.button :submit, class: "btn-primary" %>
<% end %>